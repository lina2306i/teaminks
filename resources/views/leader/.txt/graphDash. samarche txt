        <hr class="border-gray-600 my-5">
        <!-- Graphiques -->
        <!-- Graphiques (sans Chart.js - CSS pur) -->
        <div class="row g-4 mb-5 justify-content-center">
            <!-- Tâches complétées par jour (7 derniers jours) -->
            <div class="col-lg-6">
                <div class="card bg-gray-800 text-white shadow-lg border-0 rounded-3 overflow-hidden">
                    <div class="card-header fw-bold bg-gray-900 py-3">
                        Tâches complétées par jour (7 derniers jours)
                    </div>
                    <div class="card-body p-4">
                        @if(empty($completedTasks_labels) || count($completedTasks_labels) === 0)
                            <div class="text-center text-gray-400 py-5">
                                <i class="fas fa-chart-line fa-4x mb-3 opacity-50"></i>
                                <p>Aucune tâche complétée récemment.</p>
                            </div>
                        @else
                            <div class="space-y-4">
                                @foreach($completedTasks_labels as $index => $day)
                                    @php
                                        $value = $completedTasks_values[$index] ?? 0;
                                        $max = max($completedTasks_values);
                                        $percentage = $max > 0 ? ($value / $max) * 100 : 0;
                                    @endphp
                                    <div class="flex items-center gap-4">
                                        <span class="w-16 text-sm text-gray-300">{{ $day }}</span>
                                        <div class="flex-1 bg-gray-700 rounded-full h-10 overflow-hidden relative">
                                            <div class="h-full bg-gradient-to-r from-blue-500 to-blue-700 rounded-full transition-all duration-1000 ease-out"
                                                 style="width: {{ $percentage }}%"></div>
                                            <span class="absolute inset-0 flex items-center justify-end px-3 text-sm font-medium">
                                                {{ $value }}
                                            </span>
                                        </div>
                                    </div>
                                @endforeach
                            </div>
                        @endif
                    </div>
                </div>
            </div>

            <!-- Membres les plus actifs -->
             <div class="col-lg-6">
                <div class="card bg-gray-800 text-white shadow-lg border-0 rounded-3 overflow-hidden">
                    <div class="card-header fw-bold bg-gray-900 py-3">
                        Membres les plus actifs
                    </div>
                    <div class="card-body p-5">
                        @if(empty($members_labels) || count($members_labels) === 0)
                            <div class="text-center text-gray-400 py-5">
                                <i class="fas fa-users fa-4x mb-3 opacity-50"></i>
                                <p>Aucune activité enregistrée.</p>
                            </div>
                        @else
                            <div class="space-y-6">
                                @php $colors = ['from-purple-600 to-pink-600', 'from-emerald-600 to-teal-500', 'from-orange-500 to-red-600', 'from-indigo-600 to-blue-500']; @endphp
                                @php $maxValue = max($members_values) ?: 1; @endphp
                                @foreach($members_labels as $index => $name)
                                    @php
                                        $value = $members_values[$index] ?? 0;
                                        $percent = ($value / $maxValue) * 100;
                                        $colorClass = $colors[$index % count($colors)];
                                    @endphp
                                    <div class="flex items-center gap-4">
                                        <span class="w-32 text-left font-medium truncate">{{ $name }}</span>
                                        <div class="flex-1 relative">
                                            <div class="h-14 bg-gray-700 rounded-full overflow-hidden shadow-inner">
                                                <div class="h-full bg-gradient-to-r {{ $colorClass }} rounded-full flex items-center justify-end px-4 transition-all duration-1000 ease-out shadow-lg"
                                                     style="width: {{ $percent }}%;">
                                                    <span class="text-lg font-bold drop-shadow">{{ $value }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                @endforeach
                            </div>
                        @endif
                    </div>
                </div>
            </div>
        </div>
        <hr class="border-gray-600 my-5">



